# Smart Crop Advisory System - Frontend Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BASE_URL=http://localhost:3000

# Google Maps Configuration
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase Configuration (for push notifications)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=smart-crop-advisory.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=smart-crop-advisory
REACT_APP_FIREBASE_STORAGE_BUCKET=smart-crop-advisory.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# App Configuration
REACT_APP_APP_NAME=Smart Crop Advisory
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
REACT_APP_ENABLE_VOICE_SUPPORT=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_CAMERA_DETECTION=true
REACT_APP_ENABLE_LOCATION_SERVICES=true

# Third-party Services
REACT_APP_WEATHER_API_KEY=your-weather-api-key
REACT_APP_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# PWA Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_NOTIFICATION_ENABLED=true

# Debugging
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info